@model UserM.Models.LoginViewModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>
  <div class="container pt-5">
    <div class="row">
        <div class="col-6 offset-3 border border-primary rounded pl-5 pr-5 pb-5">
            <div class="text-center">
                <h1 class="text-info"> Login  </h1>
            </div>
            @{
                if(ViewBag.Message != null)
                {
                    <p style="color:red">@ViewBag.Message</p>
                }
            }
            <form method="post" asp-action="Login">
               
                <div class="form-group">
                    <label asp-for="UserName"></label>
                    <input type="text" asp-for="UserName" placeholder="Enter username" class="form-control" autocomplete="off" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
               
                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input type="password" asp-for="Password" class="form-control" placeholder="Enter password" autocomplete="off" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
              
                <div class="form-group">
                   

                    <input type="submit" class="btn btn-success btn-lg mt-2 mb-1  float-right" value="Login" />
                </div>
                    <a asp-controller="HR" asp-action="RegisterSave">Din't have a account signup</a>
            </form>
        </div>
    </div>
  </div>
</body>
</html>